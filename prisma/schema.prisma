generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grant {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  organization String
  category    String[] // ["Cloud Compute", "Health AI", "Finance AI", "LLM Tokens", "Technology"]
  amount      String?
  deadline    DateTime?
  url         String   @unique
  requirements String? @db.Text
  eligibility String?  @db.Text
  source      String   // Website source
  location    String?  // "Africa", "Kenya", "Global", etc.
  scrapedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
  tags        String[]

  @@index([location])

  @@index([deadline])
  @@index([category])
  @@index([isActive])
}

model ScrapingJob {
  id          String   @id @default(cuid())
  source      String
  status      String   // "success", "failed", "running"
  grantsFound Int      @default(0)
  error       String?
  startedAt   DateTime @default(now())
  completedAt DateTime?

  @@index([status])
  @@index([startedAt])
}
